<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pixel_panel"
    android:gravity="center">

    <TextView
        android:id="@+id/endGameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spiel beendet"
        android:textSize="18sp"
        android:textColor="@color/pixel_yellow"
        android:fontFamily="@font/pixel_font" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/endGameSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/pixel_text"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/pixel_font" />
    </ScrollView>
    <Button
        android:id="@+id/btnEndClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="OK"
        style="@style/PixelButton" />
</LinearLayout>
