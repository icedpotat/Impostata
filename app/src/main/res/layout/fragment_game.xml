<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Setup Phase -->
        <LinearLayout
            android:id="@+id/setupLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|end">

                <TextView
                    android:text="Impostata Spiel"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btnSelectGroup"
                    android:text="Gruppen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Slider Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/selectedGroupContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp" />

                <TextView
                    android:id="@+id/playerCountLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3 Spieler"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginBottom="4dp" />

                <SeekBar
                    android:id="@+id/playerCountSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="17"
                    android:progress="0"
                    android:thumbTint="#FFFFFF"
                    android:progressTint="#FFFFFF" />
            </LinearLayout>

            <!-- Role Count Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">

                <!-- Undercover -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/btnUndercoverMinus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="−" />

                    <TextView
                        android:id="@+id/undercoverCountText"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btnUndercoverPlus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_undercover"
                        android:contentDescription="Undercover Icon"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Impostor -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btnImpostorMinus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="−" />

                    <TextView
                        android:id="@+id/ImpostorCountText"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btnImpostorPlus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_impostor"
                        android:contentDescription="Impostor Icon"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Civilians -->
                <TextView
                    android:id="@+id/civilianCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zivile: 0"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nameInputsContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp" />

            <Button
                android:id="@+id/btnStartGame"
                android:text="Spiel starten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Button
                android:id="@+id/importWordsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wörter importieren" />
        </LinearLayout>

        <!-- Game Phase -->
        <!-- (Unchanged content remains below) -->

        <!-- Game Phase -->
        <LinearLayout
            android:id="@+id/gameLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/currentPlayerText"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp" />

            <Button
                android:id="@+id/btnShowWord"
                android:text="Meine Rolle anzeigen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/wordDisplayLayout"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/wordText"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btnNextPlayer"
                    android:text="Weitergeben"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- Voting Phase -->
        <LinearLayout
            android:id="@+id/votingLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingTop="16dp">

            <TextView
                android:text="Stimmt ab, wer der Impostor ist!"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/votingButtonsLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Result Phase -->
        <LinearLayout
            android:id="@+id/resultLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/voteResultText"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp" />

            <LinearLayout
                android:id="@+id/ImpostorGuessLayout"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:text="Impostor, rate das Crew-Wort:"
                    android:textColor="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/ImpostorGuessInput"
                    android:hint="Crew-Wort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#AAAAAA" />

                <Button
                    android:id="@+id/btnConfirmGuess"
                    android:text="Bestätigen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:id="@+id/btnContinueVoting"
                android:text="Weiter zur nächsten Abstimmung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnRestartGame"
                android:text="Neues Spiel starten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
