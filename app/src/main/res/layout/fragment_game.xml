<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pixel_bg"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Setup Phase -->
        <LinearLayout
            android:id="@+id/setupLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pixel_panel"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|end">

                <TextView
                    android:text="Impostata Spiel"
                    android:textSize="18sp"
                    android:textColor="@color/pixel_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/pixel_font"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btnSelectGroup"
                    android:text="Gruppen"
                    style="@style/PixelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/selectedGroupContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:padding="12dp" />

            <TextView
                android:id="@+id/playerCountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Spieler"
                android:textColor="@color/pixel_text"
                android:fontFamily="@font/pixel_font"
                android:textSize="14sp"
                android:layout_marginTop="12dp" />

            <SeekBar
                android:id="@+id/playerCountSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="17"
                android:progress="0"
                android:thumbTint="@color/pixel_text"
                android:progressTint="@color/pixel_text" />

            <!-- Role Controls -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rollen"
                android:textColor="@color/pixel_yellow"
                android:fontFamily="@font/pixel_font"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />
            <!-- Undercover Controls -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnUndercoverMinus"
                    android:text="−"
                    style="@style/PixelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/undercoverCountText"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="16sp"
                    android:textColor="@color/pixel_text"
                    android:fontFamily="@font/pixel_font" />

                <Button
                    android:id="@+id/btnUndercoverPlus"
                    android:text="+"
                    style="@style/PixelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_undercover"
                    android:contentDescription="Undercover Icon"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
            <!-- Impostor Controls -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <Button
                    android:id="@+id/btnImpostorMinus"
                    android:text="−"
                    style="@style/PixelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/ImpostorCountText"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="16sp"
                    android:textColor="@color/pixel_text"
                    android:fontFamily="@font/pixel_font" />

                <Button
                    android:id="@+id/btnImpostorPlus"
                    android:text="+"
                    style="@style/PixelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_impostor"
                    android:contentDescription="Impostor Icon"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
            <!-- Civilians -->
            <TextView
                android:id="@+id/civilianCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zivile: 0"
                android:textColor="@color/pixel_text"
                android:textSize="14sp"
                android:fontFamily="@font/pixel_font"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:id="@+id/nameInputsContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/btnStartGame"
                android:text="Spiel starten"
                style="@style/PixelButton"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/importWordsButton"
                android:text="Wörter importieren"
                style="@style/PixelButton"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <!-- Game Phase -->
        <LinearLayout
            android:id="@+id/gameLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pixel_panel"
            android:visibility="gone">

            <TextView
                android:id="@+id/currentPlayerText"
                android:textSize="18sp"
                android:textColor="@color/pixel_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixel_font"
                android:padding="8dp" />

            <Button
                android:id="@+id/btnShowWord"
                android:text="Meine Rolle anzeigen"
                style="@style/PixelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/wordDisplayLayout"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/wordText"
                    android:textColor="@color/pixel_text"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pixel_font"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btnNextPlayer"
                    android:text="Weitergeben"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/PixelButton"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Voting Phase -->
        <LinearLayout
            android:id="@+id/votingLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/pixel_panel"
            android:padding="16dp">

            <TextView
                android:text="Stimmt ab, wer der Impostor ist!"
                android:textColor="@color/pixel_text"
                android:textSize="16sp"
                android:fontFamily="@font/pixel_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/votingButtonsLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Result Phase -->
        <LinearLayout
            android:id="@+id/resultLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/pixel_panel"
            android:padding="16dp">

            <TextView
                android:id="@+id/voteResultText"
                android:textColor="@color/pixel_text"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:fontFamily="@font/pixel_font" />

            <LinearLayout
                android:id="@+id/ImpostorGuessLayout"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Impostor, rate das Crew-Wort:"
                    android:textColor="@color/pixel_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pixel_font" />

                <EditText
                    android:id="@+id/ImpostorGuessInput"
                    android:hint="Crew-Wort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/pixel_text"
                    android:textColor="@color/pixel_text"
                    android:textColorHint="#AAAAAA" />

                <Button
                    android:id="@+id/btnConfirmGuess"
                    android:text="Bestätigen"
                    style="@style/PixelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnContinueVoting"
                android:text="Weiter zur nächsten Abstimmung"
                style="@style/PixelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnRestartGame"
                android:text="Neues Spiel starten"
                style="@style/PixelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
