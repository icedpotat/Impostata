<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pixel_panel"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/DrevealName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spielername"
        android:textSize="18sp"
        android:textColor="@color/pixel_yellow"
        android:fontFamily="@font/pixel_font" />


    <TextView
        android:id="@+id/DrevealWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wort"
        android:textColor="@color/pixel_text"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/pixel_font" />

    <Button
        android:id="@+id/btnRevealClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="OK"
        style="@style/PixelButton" />
</LinearLayout>
