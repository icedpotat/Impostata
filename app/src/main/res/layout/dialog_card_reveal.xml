<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/pixel_panel"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/DrevealName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spielername"
        android:textColor="@color/pixel_text"
        android:textSize="16sp"
        android:fontFamily="@font/pixel_font" />

    <TextView
        android:id="@+id/DrevealRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rolle Info"
        android:textColor="@color/pixel_yellow"
        android:textSize="16sp"
        android:fontFamily="@font/pixel_font"
        android:paddingTop="8dp" />
</LinearLayout>
