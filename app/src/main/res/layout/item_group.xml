<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/groupCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:padding="12dp"
    android:orientation="vertical"
    android:background="@drawable/pixel_panel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/groupNameText"
            android:text="Group Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pixel_text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/pixel_font" />

        <Button
            android:id="@+id/editGroupBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Edit"
            style="@style/PixelButton"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/playerListText"
        android:text="Player1, Player2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/pixel_cyan"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/pixel_font"
        android:textSize="12sp" />
</LinearLayout>
