<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pixel_panel"
    android:gravity="center"
    android:padding="24dp">

    <TextView
        android:id="@+id/currentPlayerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pixel_font"
        android:textSize="18sp"
        android:textColor="@color/pixel_text"
        android:paddingBottom="16dp" />


    <!-- Reveal Modes -->
    <FrameLayout
        android:id="@+id/revealModeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/revealClickFlip"
            layout="@layout/reveal_click_flip"
            android:visibility="gone" />

        <include
            android:id="@+id/revealHold"
            layout="@layout/reveal_hold"
            android:visibility="gone" />

        <include
            android:id="@+id/revealGrid"
            layout="@layout/reveal_grid_picker"
            android:visibility="gone" />

    </FrameLayout>


    <!-- Centered Card View -->
    <FrameLayout
        android:id="@+id/roleCardContainer"
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp">

        <!-- Word displayed below -->
        <TextView
            android:id="@+id/wordText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/pixel_text"
            android:fontFamily="@font/pixel_font"
            android:textSize="18sp"
            android:padding="10dp"
            android:background="@drawable/pixel_card_front" />

        <!-- Cover card that slides -->
        <LinearLayout
            android:id="@+id/cardCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pixel_card_back"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cardTapText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Halte gedrÃ¼ckt, um das Wort zu sehen"
                android:textColor="@color/pixel_text"
                android:fontFamily="@font/pixel_font"
                android:textSize="14sp"
                android:gravity="center" />

        </LinearLayout>

    </FrameLayout>

    <Button
        android:id="@+id/btnNextPlayer"
        style="@style/PixelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weitergeben" />
</LinearLayout>