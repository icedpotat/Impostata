<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/pixel_accent" />
            <stroke android:width="2dp" android:color="@color/pixel_text" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#222222" />
            <stroke android:width="2dp" android:color="@color/pixel_accent" />
        </shape>
    </item>
</selector>